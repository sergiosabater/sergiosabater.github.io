        if (banner && botonCerrar) {
          botonCerrar.addEventListener("click", () => {
            banner.classList.remove("fade-in-banner");
            banner.classList.add("fade-out-banner");
            setTimeout(() => banner.remove(), 500);
          });
        }
        // Animaciones on scroll
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("visible");
                if (entry.target.classList.contains("stat-counter")) {
                  animateCounter(entry.target);
                }
                observer.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.1 }
        );
        // Función para animar counters
        /**
         * @param {HTMLElement} counterElement - El elemento del contador
         */
        function animateCounter(counterElement) {
          const target = parseInt(
            counterElement.getAttribute("data-target"),
            10
          );
          // Extraer el sufijo original (%, +, etc.)
          const originalText = counterElement.innerText;
          const suffix = originalText.replace(/^\d+/, "");
          let currentCount = 0;
          const increment = target / 200; // Velocidad
          const updateCounter = () => {
            currentCount += increment;
            if (currentCount < target) {
              counterElement.innerText = Math.ceil(currentCount) + suffix;
              requestAnimationFrame(updateCounter);
            } else {
              counterElement.innerText = target + suffix;
            }
          };
          updateCounter();
        }
        // Observar elementos
        document
          .querySelectorAll(".skill-img, .timeline-item, .stat-counter")
          .forEach((el) => observer.observe(el));
      });
    </script>
